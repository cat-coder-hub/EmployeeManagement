<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9"
    tools:context=".InfoActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layoutDirection="rtl">

            <!-- Title -->
            <TextView
                android:id="@+id/titleLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="معلومات الموظف"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/cairo"/>

            <!-- الاسم -->
            <TextView
                android:text="الاسم"
                android:textSize="18sp"
                android:textColor="#37474F"
                android:fontFamily="@font/cairo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/infoName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E3F2FD"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="#0D47A1"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/cairo"/>

            <!-- المنصب -->
            <TextView
                android:text="المنصب"
                android:textSize="18sp"
                android:textColor="#37474F"
                android:fontFamily="@font/cairo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/infoRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E8EAF6"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="#1A237E"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/cairo"/>

            <!-- الراتب بالساعة -->
            <TextView
                android:text="الراتب بالساعة"
                android:textSize="18sp"
                android:textColor="#37474F"
                android:fontFamily="@font/cairo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/infoHourSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF3E0"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="#E65100"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/cairo"/>

            <!-- ساعات العمل اليومية -->
            <TextView
                android:text="عدد ساعات العمل اليومية"
                android:textSize="18sp"
                android:textColor="#37474F"
                android:fontFamily="@font/cairo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/infoDailyTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F1"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="#004D40"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/cairo"/>

            <!-- إجمالي الساعات -->
            <TextView
                android:text="إجمالي ساعات العمل بالشهر"
                android:textSize="18sp"
                android:textColor="#37474F"
                android:fontFamily="@font/cairo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/infoTotalHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3E5F5"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="#4A148C"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/cairo"/>

            <!-- إجمالي الراتب الشهري -->
            <TextView
                android:text="إجمالي الراتب الشهري"
                android:textSize="18sp"
                android:textColor="#37474F"
                android:fontFamily="@font/cairo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/infoTotalSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E8F5E9"
                android:padding="14dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/cairo"/>

        </LinearLayout>
</ScrollView>
